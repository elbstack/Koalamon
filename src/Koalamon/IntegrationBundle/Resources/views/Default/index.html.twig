{% extends 'KoalamonDefaultBundle:Default:master/admin.html.twig' %}

{% block admin %}

    <style>
        #integration-list {
            margin-right: 30px;
        }

        #integration-list h1 {
            padding-bottom: 10px;
            margin-bottom: 40px;
            border-bottom: 1px solid #ddd;
        }

        #integration-list ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        #integration-list ul li {
            width: 200px;
            height: 200px;
            margin-right: 30px;
            float: left;
            border: 1px solid #bbb;
            background-color: #f9f9f9;
            padding: 10px;
            text-align: center;
        }

        #integration-list ul li img {
            height: 140px;
            margin-bottom: 20px;
        }
    </style>

    <div id="integration-list">

        <h1>Integrations</h1>

        <ul>
            {% for integration in integrationContainer.integrations %}
                <li>
                    <a href="{{ integration.url }}">
                        {% if integration.image %}<img src="{{ integration.image }}"><br/>{% endif %}
                        {{ integration.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>

    </div>

{% endblock %}